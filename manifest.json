{
    "manifest_version": 2,

    "name": "BleNRC",
    "description": "BleNRC vergemakkelijkt het opzoeken van NRC-artikelen in Blendle, door elke NRC-link direct naar Blendle te laten verwijzen.",
    "version": "0.5.1",

    "icons": {"128": "blenrc_128.png",
	      "48": "blenrc_48.png",
              "16": "blenrc_16.png"},

    "content_scripts": [
        {
            "matches": ["*://*.nrc.nl/*"],
            "js":["jquery.js","nrc_script.js"],
	        "run_at": "document_start"
        },
        {
            "matches": ["*://*.blendle.com/i/*"],
            "js":["blendle_script.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
